@using Framework.ControlPanel.CommonCode.Helpers
@{
    ViewBag.Title = "Organizations";
    Layout = "~/Views/Shared/_Layout_basic.cshtml";
}
<style>
    .error {
        color: red;
    }
</style>
<script src="~/Scripts/CPSiteJavaScript.js"></script>
<div class="row" style="margin:5% auto;">
    <div class="col-md-12">
        <div class="ihsaas_logo">
            <img src="/assets/dist/img/logo.png" alt="Ihsaas Logo" />
        </div>
        <div class="login_heading">
            <h2>Organizations</h2>
        </div>
    </div>
    <div class="login-box-body">
        <div class="row" style="margin:auto !important; min-width:320px; max-width:900px;">
            @foreach (var organization in Authentication.Instance.User.UserOrganizations)
            {
                <div class="col-sm-6 col-xs-6">
                    <a href="/portal/home/organizations/selected?organizationID=@organization.OrganizationID">
                        <div class="small-box" style="border-radius:10px; background:#1678ff;color:white">
                            <div class="inner">
                                <h3 style="text-align:center; padding-top:20px;padding-bottom:20px;">@organization.OrganizationName</h3>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="col-lg-12 col-xs-12" style="margin-top:70px;">
        <div style="text-align:center;color:white">
            <p>Powered By : <a style="color:white;" href="http://www.bitscollision.com">Bits Collision</a><br />Copyright © 2019, All Right Reserved!</p>
        </div>
    </div>
</div>
<div class="text-center">
    <div id="successAlert" class="alert alert-success alert-dismissible" style="display:none;min-width:400px;">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-check"></i> Alert!</h4>
        <span id="successMessage"></span>
    </div>
    <div id="errorAlert" class="alert alert-danger alert-dismissible" style="display:none;min-width:400px;">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
        <span id="errorMessage"></span>
    </div>
</div>

<!-- /.login-box-body -->
